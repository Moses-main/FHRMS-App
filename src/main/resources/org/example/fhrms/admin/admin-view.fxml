<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #f0f4f8;" fx:controller="org.example.fhrms.admin.AdminDashboardController">

     <VBox alignment="CENTER" spacing="20" prefWidth="800" prefHeight="600" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <style>
            -fx-padding: 20px 50px;
        </style>

        <Label text="Admin Dashboard" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />

        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 20px; -fx-background-radius: 10;">
            <Button text="Manage Users" prefWidth="200" prefHeight="50" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" onAction="#handleManageUsers"/>
            <Button text="Manage Roles" prefWidth="200" prefHeight="50" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" onAction="#handleManageRoles"/>
            <Button text="Settings" prefWidth="200" prefHeight="50" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" onAction="#handleSettings"/>
        </HBox>

        <HBox alignment="CENTER" spacing="40" style="-fx-background-color: #ecf0f1; -fx-padding: 20px; -fx-background-radius: 10;">
            <VBox alignment="CENTER" spacing="10">
                <Label text="Total Users: 150" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
                <Label text="Active Sessions: 25" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
            </VBox>
            <VBox alignment="CENTER" spacing="10">
                <Label text="Total Revenue: $10,000" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
                <Label text="Pending Requests: 12" style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="30" style="-fx-background-color: #ecf0f1; -fx-padding: 20px; -fx-background-radius: 10;">
            <Button text="Logout" prefWidth="150" prefHeight="40" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" onAction="#handleLogout"/>
        </HBox>

    </VBox>

</AnchorPane>
