<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #f0f4f8;" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.fhrms.uicontroller.auth.LoginController">
    <VBox alignment="CENTER" spacing="20" styleClass="auth-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Adjust the padding to ensure content is centered and flexible -->
        <style>
            -fx-padding: 20 30 20 30; /* Add padding for responsiveness */
        </style>
        <!-- Main Title -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Login" />

        <Label />
        <Label fx:id="errorMessageLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: red;" />
        <Label />
        
        <!-- Username Field -->
        <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
        
        <!-- Password Field -->
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />

        <!-- Login Button -->
        <Button fx:id="loginButton" onAction="#login" styleClass="button-primary" text="Login" />
        
        <!-- Sign-up Link -->
        <Hyperlink onAction="#goToSignup" styleClass="link" text="Don't have an account? Sign Up" />
    </VBox>
</AnchorPane>
