<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.fhrms.waiter.WaiterDashboardController" style="-fx-background-color: #f8f9fa;">
    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <!-- Dashboard Header -->
        <Label text="Waiter Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
        <Separator orientation="HORIZONTAL" style="-fx-background-color: #dee2e6;" />

        <!-- Pending Orders Section -->
        <VBox spacing="10">
            <Label text="Pending Orders" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TableView fx:id="pendingOrdersTable" prefHeight="200">
                <columns>
                    <TableColumn text="Order ID" fx:id="orderIdColumn" prefWidth="100" />
                    <TableColumn text="Customer Name" fx:id="customerNameColumn" prefWidth="200" />
                    <TableColumn text="Items" fx:id="itemsColumn" prefWidth="300" />
                    <TableColumn text="Actions" fx:id="actionsColumn" prefWidth="150" />
                </columns>
            </TableView>
        </VBox>

        <!-- Completed Orders Section -->
        <VBox spacing="10">
            <Label text="Completed Orders" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <TableView fx:id="completedOrdersTable" prefHeight="200">
                <columns>
                    <TableColumn text="Order ID" fx:id="completedOrderIdColumn" prefWidth="100" />
                    <TableColumn text="Customer Name" fx:id="completedCustomerNameColumn" prefWidth="200" />
                    <TableColumn text="Items" fx:id="completedItemsColumn" prefWidth="300" />
                    <TableColumn text="Served Time" fx:id="servedTimeColumn" prefWidth="150" />
                </columns>
            </TableView>
        </VBox>

        <!-- Logout Button -->
        <Button fx:id="logoutButton" text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" onAction="#logout" />
    </VBox>
</AnchorPane>
